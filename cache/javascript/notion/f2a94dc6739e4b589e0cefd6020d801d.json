        "properties": {
          "title": [
            [
              "A common mistake seen in JavaScript when run in a browser environment is updating the DOM more often than necessary."
            ]
          ]
        },
        "type": "text",
        "version": 1,
        "inline_content": [
          {
            "Text": "A common mistake seen in JavaScript when run in a browser environment is updating the DOM more often than necessary."
          }
        ]
      },
      {
        "alive": true,
        "created_by": "bb760e2d-d679-4b64-b2a9-03005b21870a",
